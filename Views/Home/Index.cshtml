@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center pt-5 hero-section ">
    <h1 class="fw-bold display-3 text-white">Welcome to Qoraal Blogs</h1>
    <p class="lead text-white mt-3">Discover a world of creativity, inspiration, and stories. Start your journey today!</p>
    <a href="/Posts" class="btn btn-primary btn-lg mt-4">Explore Posts</a>
</div>



<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Write Your Story</h5>
                    <p class="card-text">Share your thoughts and ideas with the world. Start blogging today!</p>
                    <a href="/Posts/Create" class="btn btn-outline-primary">Start Writing</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Explore Topics</h5>
                    <p class="card-text">Browse through a variety of topics and find what inspires you.</p>
                    <a href="/Posts" class="btn btn-outline-primary">Browse Posts</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Join the Community</h5>
                    <p class="card-text">Connect with like-minded individuals and grow your network.</p>
                    <a href="/Users/Register" class="btn btn-outline-primary">Sign Up</a>
                </div>
            </div>
        </div>
    </div>
</div>
