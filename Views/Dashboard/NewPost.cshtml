@{
    ViewData["Title"] = "NewPost Page";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous" />
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer" />
<div class="d-flex">
      <div class="my vh-100 pt-3" style="width: 230px">
        <div class="max-auto pb-4">
            <img class="dash-logo pt-3 px-2" src="/img/logo-wbg.png" alt="" />
        </div>
        <div class="dash-links">
            <i class="fa-solid fa-gauge px-2 dashIcon"></i>
            <a asp-controller="Dashboard" asp-action="Index">Dashboard</a>
        </div>
        <div class="dash-links">
            <i class="fa-solid fa-pen-to-square px-2"></i>
            <a asp-controller="Dashboard" asp-action="NewPost"> New Post</a>
        </div>
        <div class="dash-links">
            <i class="fa-solid fa-magnifying-glass px-2"></i>
            Browse Post
        </div>
        <div class="dash-links">
            <i class="fa-solid fa-layer-group px-2"></i>
            Category
        </div>
        <div class="dash-links">
            <i class="fa-solid fa-chart-simple px-2"></i>
            Anaylaytics
        </div>
        <div class="dash-links">
            <i class="fa-regular fa-user px-2"></i>
            Users
        </div>
        <!-- sidebar -->
      </div>

      <div class="w-100">
        <div class="m-4">
          <div class="d-flex justify-content-end mx-5 mt-4">
            <button data-bs-toggle="modal" data-bs-target="#exampleModal" class="btn btn-primary">
              +Add Post
            </button>
          </div>
          <!-- My content -->
        </div>

        <!-- Button trigger modal -->

        <!-- Modal -->
        <div
          class="modal fade"
          id="exampleModal"
          tabindex="-1"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                  Add New Pattient
                </h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">
                <form action="" class="form-group">
                  <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1"></span>
                    <input
                      type="text"
                      class="form-control"
                      placeholder="Username"
                      aria-label="Username"
                      aria-describedby="basic-addon1"
                    />
                  </div>

                  <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1"
                      ><i class="fa-solid fa-location-dot"></i
                    ></span>
                    <input
                      type="text"
                      class="form-control"
                      placeholder="Address"
                      aria-label="Username"
                      aria-describedby="basic-addon1"
                    />
                  </div>
                </form>
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >
                  Close
                </button>
                <button type="button" class="btn btn-primary">
                  Save changes
                </button>
              </div>
            </div>
          </div>
        </div>

        <div class="m-5">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Category</th>
                <th>Date</th>
              </tr>
            </thead>

            <tbody></tbody>
          </table>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>