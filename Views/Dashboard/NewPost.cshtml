@model BlogApp.Models.BlogPost

@{
    ViewData["Title"] = "NewPost Page";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous" />
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer" />
<div class="d-flex">
      <div class="my vh-100 pt-3" style="width: 230px">
        <div class="dash-links">
            <i class="fa-solid fa-gauge px-2 dashIcon"></i>
            <a asp-controller="Dashboard" asp-action="Index">Dashboard</a>
        </div>
        <div class="dash-links">
            <i class="fa-solid fa-pen-to-square px-2"></i>
            <a asp-controller="Dashboard" asp-action="NewPost"> New Post</a>
        </div>
        <div class="dash-links">
            <i class="fa-solid fa-magnifying-glass px-2"></i>
            Browse Post
        </div>
        <div class="dash-links">
            <i class="fa-solid fa-layer-group px-2"></i>
            Category
        </div>
        <div class="dash-links">
            <i class="fa-solid fa-chart-simple px-2"></i>
            Anaylaytics
        </div>
        <div class="dash-links">
            <i class="fa-regular fa-user px-2"></i>
            Users
        </div>
        <!-- sidebar -->
      </div>

      <div class="w-100">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary m-4 float-end" data-bs-toggle="modal" data-bs-target="#exampleModal">
            + Add new Post
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">New Post</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form  asp-action="NewPost" method="post">
                    <div class="modal-body">
                        <div class="mb-3">
                            
                                <label asp-for="Title" class="form-label">Title</label>
                                <input asp-for="Title" type="text" class="form-control" id="Title" />
                            
                        </div>
                            <label asp-for="Category" class="form-label">Select Category</label>
                            <select asp-for="Category" class="form-select" aria-label="Select Category">
                                <option selected>Post Category's'</option>
                                <option value="News">News</option>
                                <option value="Sports">Sports</option>
                                <option value="Education">Education</option>
                            </select>
                        <div class="mb-3">
                                <label asp-for="Content" class="form-label">Content</label>
                                <textarea asp-for="Content" class="form-control" id="postTextInput" rows="3"></textarea>
                        
                                </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                    </form>
                </div>  
            </div>
        </div>
      </div>
</div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>